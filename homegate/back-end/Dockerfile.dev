# Development Dockerfile for Backend
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY src ./src

# Expose port
EXPOSE 8881

# Development mode with hot reload (ts-node-dev)
CMD ["npm", "run", "dev"]

